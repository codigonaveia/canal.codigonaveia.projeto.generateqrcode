@{
    ViewData["Title"] = "CreateQrCode";
}

<div class="container">
    <div class="row">
        <form asp-action="CreateQrCode" asp-controller="GenerateQrCode" method="post">
            <div class="mb-3">
                <label class="form-label">Digite o valor para o Qr Code</label>
                <input type="text" class="form-control" id="produtoNome" name="produtoNome">
               
            </div>
            <div>
                <div class="d-grid gap-2">
                    <button class="btn btn-primary" type="submit">Gerar  QrCode</button>
                    
                </div>
            </div>
            @if (ViewBag.QrCodeImage != null)
            {
                <img src="@ViewBag.QrCodeImage" alt="" style="height:100px; width:100px" /><br />
                @ViewBag.Produto
            }
        </form>

        
    </div>
</div>

